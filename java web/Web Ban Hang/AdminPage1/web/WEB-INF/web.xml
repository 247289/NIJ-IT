<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ChangeStatus</servlet-name>
        <servlet-class>controller.ChangeStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePhone</servlet-name>
        <servlet-class>controller.UpdatePhone</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertPhong</servlet-name>
        <servlet-class>controller.InsertPhone</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeStatus</servlet-name>
        <url-pattern>/ChangeStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePhone</servlet-name>
        <url-pattern>/UpdatePhone</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertPhong</servlet-name>
        <url-pattern>/InsertPhong</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--    <welcome-file-list>
        <welcome-file>formProduct.jsp</welcome-file>
    </welcome-file-list>-->
</web-app>
